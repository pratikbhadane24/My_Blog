<%- include("partials/header") -%>

    <h1>Compose</h1><hr>
    <form action="/compose" method="POST">
        <div class="form-group">
            <h5>Title</h5>
            <input type="email" class="form-control" name="postTitle" placeholder="Enter a Title">
        </div>
        <div class="form-group">
            <h5>Post</h5>
            <textarea class="form-control" name="postBody" rows="10" placeholder="Enter Your Message...."></textarea>
        </div>

        <button type="submit" name="button" class="btn btn-dark">Publish</button>
    </form>

    <%- include("partials/footer") -%>